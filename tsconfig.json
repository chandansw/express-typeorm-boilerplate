{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "lib": ["es5", "es6"],
        "target": "es6",
        "outDir": "./dist",
        "noImplicitAny": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": false
    },
    "include": [
        "./src/*"
    ],
    "exclude": [
        "node_modules"
    ]
}